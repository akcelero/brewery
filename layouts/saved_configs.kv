<ConfigPosition@Button>:
	background_normal: ''
	background_color: light_blue
	color: dark_blue
	font_size: self.height * 0.5
	height: self.width * 0.1
	size_hint_y: None

<SavedConfigs>
	name: "SavedConfigs"
	canvas.before:
        Color:
            rgba: dark_blue
        Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout
		orientation: 'vertical'
		Label:
			text: 'WYBIERZ KONFIGURACJE'
			font_size: self.height * 0.5
			size_hint: 1, 0.2
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'center'
			size_hint: 1, .7
			ScrollView:
				size_hint: 0.6, 1
				id: config_scroll
				size: self.size
				do_scroll_x: False
				BoxLayout:
					padding: 10
					spacing: 10
					size_hint_y: None
					height: self.minimum_height
					id: config_list
					orientation: 'vertical'
		AnchorLayout:
			size_hint: 1, 0.1
			anchor_x: 'center'
			anchor_y: 'center'
			OrangeButton:
				size_hint: 0.6, 0.8
				font_size: self.parent.height * 0.6
				text: "MENU"
				on_release: root.go_to_menu()
