#:set dark_blue .21, .23, .35, 1
#:set light_blue .51, .53, .65, 1
#:set orange .97, .69, .23, 1
#:set bg_blue .53, .60, .69, 1
#:set red .88, .10, .10, 1
#:set white 1., 1., 1., 1
#:include layouts/new_brew.kv
#:include layouts/cooking.kv
#:include layouts/edit_hops.kv
#:include layouts/finish.kv
#:include layouts/main_menu.kv
#:include layouts/save_config.kv
#:include layouts/settings_menu.kv
#:include layouts/saved_configs.kv

<ConfirmPopup@AnchorLayout>:
	canvas.before:
		Clear
		Color:
			rgba: (0,0,0,0.8)
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		canvas.before:
			Clear
			Color:
				rgba: light_blue
			Rectangle:
				pos: self.pos
				size: self.size
			Color:
				rgba: dark_blue
			Rectangle:
				pos: self.x + 4, self.y + 4
				size: self.width - 8, self.height - 8
		orientation: 'vertical'
		size_hint: 0.8, 0.7
		Label:
			text: root.text
			halign: "center"
			valign: "middle"
			size_hint_y: 0.6
			font_size: self.height * 0.3
			color: light_blue
		AnchorLayout:
			size_hint_y: 0.4
			anchor_x: 'center'
			anchor_y: 'center'
			OrangeButton:
				size_hint: .5, .5
				text: 'ok'
				font_size: self.height * .8
				on_press: root.ok()

<Background>:
	canvas.before:
        Color:
            rgba: dark_blue
        Rectangle:
            pos: self.pos
            size: self.size

<ImageCheckBox@ToggleButtonBehavior+Image>:
    allow_stretch: True

<ImageButton@ButtonBehavior+Image>:

<OrangeButton@Button>:
	background_normal: ''
	background_color: orange
	color: dark_blue

<BlueButton@Button>:
	background_normal: ''
	background_color: light_blue
	color: dark_blue

<Border@AnchorLayout>:
	canvas.before:
		Clear
        Color:
            rgba: light_blue
        Rectangle:
            pos: self.pos
            size: self.size
		Color:
			rgba: dark_blue
		Rectangle:
			pos: self.x + 2, self.y + 2
			size: self.width - 4, self.height - 4
