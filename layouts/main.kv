#:include layouts/new_brew.kv
#:include layouts/main_menu.kv


<Cooking>:
	name: 'Cooking'
	canvas.before:
        Color:
            rgba: 0.21, 0.23, 0.35, 1
        Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		orientation: 'horizontal'
		height: self.parent.height
		width: self.parent.width
		BoxLayout:
			size_hint: 0.8, 1.0
			AnchorLayout:
				anchor_x: 'center'
				anchor_y: 'center'
				size_hint: 1, 0.8
				Label:
					text: 'test'
			BoxLayout:
				size_hint: 1, 0.2
				orientation: 'horizontal'
				AnchorLayout
					anchor_x: 'center'
					anchor_y: 'center'
					Label:
						size_hint: 0.5, 1
						text: 'time'
				AnchorLayout
					anchor_x: 'center'
					anchor_y: 'center'
					Label:
						text: 'takietam'
						size_hint: 0.5, 1
						source: 'imgs/wifi.jpg'
		BoxLayout:
			orientation: 'vertical'
			size_hint: 0.2, 1.0
			AnchorLayout:
				size_hint: 0.9, 0.2
				anchor_x: 'center'
				anchor_y: 'center'
				CheckBox
					size_hint: 1.0, 0.5
					active: True
					background_checkbox_down: 'imgs/check_down.png'
					background_checkbox_normal: 'imgs/check_on.png'
					background_normal: ''
			AnchorLayout:
				size_hint: 0.9, 0.2
				anchor_x: 'center'
				anchor_y: 'center'
				Label:
					text: 'up'
			AnchorLayout:
				size_hint: 0.9, 0.2
				anchor_x: 'center'
				anchor_y: 'center'
				Label:
					text: '20Â°C'
			AnchorLayout:
				size_hint: 0.9, 0.2
				anchor_x: 'center'
				anchor_y: 'center'
				Label:
					text: 'down'
			AnchorLayout:
				size_hint: 0.9, 0.2
				anchor_x: 'center'
				anchor_y: 'center'
				Button:
					background_normal: ''
					background_color: 0.97, 0.69, 0.23, 1
					color: 0.21, 0.23, 0.35, 1
					font_size: self.parent.width * 0.1
					size_hint: .8, 0.5
					text: 'PAUZA'
					on_release: root.menu()
