#:include layouts/new_brew.kv
#:include layouts/cooking.kv
#:include layouts/main_menu.kv
#:include layouts/save_config.kv
#:include layouts/saved_configs.kv

<ImageButton@ButtonBehavior+Image>:

<OrangeButton@Button>:
	background_normal: ''
	background_color: 0.97, 0.69, 0.23, 1
	color: 0.21, 0.23, 0.35, 1

<ConfigPosition@Button>:
	background_normal: ''
	background_color: 0.51, 0.53, 0.65, 1
	color: 0.21, 0.23, 0.35, 1
	font_size: self.height * 0.5
	height: self.width * 0.1
	size_hint_y: None

<Border@AnchorLayout>:
	canvas.before:
        Color:
            rgba: 1,1,1, 1
        Rectangle:
            pos: self.pos
            size: self.size
	AnchorLayout:
		size_hint: None, None
		width: self.parent.width - 2
		height: self.parent.height - 2
		canvas.before:
			Color:
				rgba: 0.21, 0.23, 0.35, 1
			Rectangle:
				pos: self.pos
				size: self.size


