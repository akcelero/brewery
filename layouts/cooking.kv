<Cooking>:
	name: 'Cooking'
	canvas.before:
        Color:
            rgba: dark_blue
        Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		name: 'body'
		orientation: 'horizontal'
		height: self.parent.height
		width: self.parent.width
		BoxLayout:
			name: 'left-part'
			size_hint: 0.7, 1.0
			orientation: 'vertical'
			BoxLayout:
				name: 'main-part'
				orientation: 'horizontal'
				size_hint: 1, 0.8
				AnchorLayout:
					anchor_x: 'center'
					anchor_y: 'center'
					size_hint: 0.5, 1
					BoxLayout: 
						orientation: 'vertical'
						size_hint: 0.9, 1
						AnchorLayout:
							size_hint: 1, 0.2
							anchor_x: 'center'
							anchor_y: 'center'
							Label:
								font_size: self.width * 0.2
								text: 'ETAP ' + str(root.current_stage + 1)
						AnchorLayout:
							size_hint: 1, 0.01
							anchor_x: 'center'
							anchor_y: 'center'
							ProgressBar:
						AnchorLayout:
							size_hint: 1, 0.79
							anchor_x: 'center'
							anchor_y: 'center'
							Image:
								source: 'imgs/kociol.gif'
								size_hint: 0.9, 0.9
								width: self.parent.width
								height: self.parent.height
								allow_stretch: True
				AnchorLayout:
					name: 'show-temp-part'
					size_hint: 0.5, 1
					anchor_x: 'right'
					anchor_y: 'center'
					BoxLayout:
						orientation: 'vertical'
						size_hint: 0.9, 0.95
						AnchorLayout:
							anchor_x: 'center'
							anchor_y: 'bottom'
							size_hint: 1, 0.1
							Label:
								size_hint: 1, 0.8
								font_size: self.width * 0.1
								text: "ETR"
						Border:
							size_hint: 1, 0.2
							Label:
								id: eta
								color: light_blue
								font_size: self.width * 0.2
								text: root.eta_time(root.time_left)
						AnchorLayout:
							size_hint: 1, 0.15
							anchor_x: 'left'
							anchor_y: 'bottom'
							Label:
								size_hint: 1, 0.8
								font_size: self.width * 0.1
								text: "TEMP. DOCELOWA"
						Border:
							size_hint: 1, 0.2
							Label:
								color: light_blue
								font_size: self.width * 0.2
								text: str(root.target_temp) + "°C"
						AnchorLayout:
							anchor_x: 'center'
							anchor_y: 'bottom'
							size_hint: 1, 0.15
							Label:
								size_hint: 1, 0.8
								font_size: self.width * 0.1
								text: "TEMP. AKTUALNA"
						Border:
							size_hint: 1, 0.3
							Label:
								color: light_blue
								font_size: self.width * 0.2
								text: str(root.current_temp) + "°C"
			Border:
				size_hint: 1, 0.2
				BoxLayout:
					name: 'date-wifi'
					orientation: 'horizontal'
					AnchorLayout
						anchor_x: 'center'
						anchor_y: 'center'
						size_hint_x: .6
						padding_left: 20
						Label:
							font_size: self.height * 0.7
							size_hint: 0.5, 1
							text: root.time()
							id: clock
					AnchorLayout
						anchor_x: 'center'
						anchor_y: 'center'
						size_hint_x: .2
						Image:
							text: 'takietam'
							size_hint: 0.7, 0.7
							source: 'imgs/wifi.png'
					AnchorLayout
						anchor_x: 'center'
						anchor_y: 'center'
						size_hint_x: .2
						ImageButton:
							text: 'takietam'
							size_hint: 0.3, 0.3
							source: 'imgs/break.png'
							on_release: root.manager.go('MainMenu')
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'center'
			size_hint: 0.2, 1.0
			BoxLayout:
				name: 'right-part'
				orientation: 'vertical'
				size_hint: 0.9, 1.0
				AnchorLayout:
					size_hint: 1, 0.2
					anchor_x: 'center'
					anchor_y: 'center'
					ImageCheckBox:
						size_hint: 0.7, 0.7
						active: True
						source: 'imgs/check_off.png' if self.state == 'down' else 'imgs/check_on.png'
						background_normal: ''
				AnchorLayout:
					size_hint: 1, 0.2
					anchor_x: 'center'
					anchor_y: 'center'
					ImageButton:
						on_press: root.inc_temp()
						source: 'imgs/arrow_up.png'
						allow_stretch: True
						size_hint: 0.8, 0.8
				AnchorLayout:
					size_hint: 1, 0.2
					anchor_x: 'center'
					anchor_y: 'center'
					Label:
						text: str(root.target_temp) + "°C"
						color: light_blue
						font_size: self.width * 0.3
				AnchorLayout:
					size_hint: 1, 0.2
					anchor_x: 'center'
					anchor_y: 'center'
					ImageButton:
						on_press: root.dec_temp()
						source: 'imgs/arrow_down.png'
						allow_stretch: True
						size_hint: 0.7, 0.7
				AnchorLayout:
					size_hint: 1, 0.2
					anchor_x: 'center'
					anchor_y: 'center'
					OrangeButton:
						font_size: self.parent.width * 0.2
						size_hint: .9, 0.5
						text: 'PAUZA'
						id: pause_button
						on_release: root.toggle_pause()

