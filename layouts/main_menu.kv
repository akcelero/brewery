<MainMenu>:
	canvas.before:
		Color:
			rgba: dark_blue
		Rectangle:
			pos: self.pos
			size: self.size
	AnchorLayout
		height: self.parent.height
		width: self.parent.width

		GridLayout:
			orientation: 'vertical'
			size_hint: 0.5, 0.8
			cols: 1
			spacing: self.height * 0.1
			Label:
				text: 'MENU'
				font_size: self.parent.width * 0.2
			Button:
				text: 'NOWA WARKA'
				on_release: root.new_brew()
				font_size: self.parent.width * 0.1
				background_normal: ''
				background_color: light_blue
				color: dark_blue
			Button:
				text: 'ZAPISANE WARKI'
				font_size: self.parent.width * 0.1
				on_release: root.saved_configs()
				background_normal: ''
				background_color: light_blue
				color: dark_blue
			Button:
				text: 'USTAWIENIA'
				on_release: root.settings()
				font_size: self.parent.width * 0.1
				background_normal: ''
				background_color: light_blue
				color: dark_blue
