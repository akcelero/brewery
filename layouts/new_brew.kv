<NewBrew>:
	name: 'NewBrew'
	canvas.before:
        Color:
            rgba: dark_blue
        Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		orientation: 'horizontal'
		height: self.parent.height
		width: self.parent.width
		BoxLayout:
			cols: 1
			size_hint: 0.3, 1.0
			orientation: 'vertical'
			AnchorLayout:
				size_hint: 0.9, 0.2
				orientation: 'vertical'
				anchor_y: 'bottom'
				BoxLayout:
					size_hint: 1.0, 0.5
					orientation: 'vertical'
					Label:
						text: 'ZACIERANIE'
						font_size: self.parent.height * 0.6
					Label:
						id: podetap_label
						font_size: self.parent.height * 0.4
						text: 'PODETAP'
			AnchorLayout:
				size_hint: 0.9, 0.6
				orientation: 'vertical'
				Image:
					source: 'imgs/kociol.gif'
					allow_stretch: True
					size_hint: 0.9, 0.9
			AnchorLayout:
				size_hint: 0.9, 0.2
				orientation: 'vertical'
				Button:
					background_normal: ''
					background_color: 0.51, 0.53, 0.65, 1
					color: 0.21, 0.23, 0.35, 1
					text: 'COFNIJ'
					font_size: '40dp'
					font_size: self.parent.height * 0.3
					on_release: root.prev_stage()
					size_hint: 0.9, 0.7
		BoxLayout:
			size_hint: 0.3, 1.0
			orientation: 'vertical'
			AnchorLayout:
				size_hint: 0.9, 0.1
				orientation: 'horizontal'
				GridLayout:
					cols: 2
					Label:
						size_hint: .4, 1.0
						color: light_blue
						font_size: self.parent.width * 0.1
						id: temp
						text: str(root.temp) + "Â°C"
					Label:
						size_hint: .4, 1.0
						font_size: self.parent.width * 0.1
						color: light_blue
						id: date
						text: 'DATA'
			AnchorLayout:
				size_hint: 0.9, 0.1
				OrangeButton:
					font_size: self.parent.width * 0.1
					size_hint: .8, 0.8
					text: 'CHMIEL'
					on_release: root.go_to_edit_hops()
			AnchorLayout:
				size_hint: 0.9, 0.1
				Label:
					size_hint: 0.1, 0.1
					color: light_blue
					text: 'TEMP. ZACIERANIA'
					font_size: self.parent.width * 0.1
			AnchorLayout:
				size_hint: 0.9, 0.4
				Knob:
					value: 0
					id: temp_zacierania_knob
					size: self.parent.width * 0.7, self.parent.width * 0.7
					knobimg_source: "imgs/knob2.png"
					show_label: True
					show_marker: False
					knobimg_size: 1
					max: root.MAX_TEMP
			AnchorLayout:
				size_hint: 0.9, 0.1
				GridLayout:
					cols: 3
					AnchorLayout:
						ImageButton:
							on_release: root.inc_temp()
							source: 'imgs/plus.png'
							allow_stretch: True
							size_hint: 0.6, 0.6
					AnchorLayout:
						Label:
							id: temp_zacierania_label
							color: light_blue
							font_size: self.parent.width * 0.5
					AnchorLayout:
						ImageButton:
							on_release: root.dec_temp()
							source: 'imgs/minus.png'
							size_hint: 0.6, 0.6
							center_x: self.parent.center_x
							center_y: self.parent.center_y
							allow_stretch: True
			AnchorLayout:
				size_hint: 0.9, 0.2
				orientation: 'vertical'
				BlueButton:
					text: 'MENU'
					font_size: '40dp'
					font_size: self.parent.height * 0.3
					on_release: root.menu()
					size_hint: 0.9, 0.7
		BoxLayout:
			size_hint: 0.3, 1.0
			orientation: 'vertical'
			AnchorLayout:
				size_hint: 0.9, 0.2
				anchor_y: 'bottom'
				BoxLayout:
					orientation: 'vertical'
					size_hint: 1, 0.9
					AnchorLayout:
						size_hint: 1, 0.5
						OrangeButton:
							font_size: self.parent.height * 0.5
							size_hint: 0.9, 0.9
							text: 'GOTOWANIE'
							on_release: root.cooking()
					AnchorLayout:
						size_hint: 1, 0.5
						OrangeButton:
							font_size: self.parent.height * 0.5
							size_hint: 0.9, 0.9
							text: 'ZAPISZ'
							on_release: root.save_config()
			AnchorLayout:
				size_hint: 0.9, 0.1
				Label:
					size_hint: 0.1, 0.1
					color: light_blue
					text: 'CZAS ZACIERANIA'
					font_size: self.parent.width * 0.1
			AnchorLayout:
				size_hint: 0.9, 0.4
				Knob:
					value: 0
					size: self.parent.width * 0.7, self.parent.width * 0.7
					id: mashing_time_knob
					knobimg_source: "imgs/knob2.png"
					show_label: True
					show_marker: False
					knobimg_size: 1
			AnchorLayout:
				size_hint: 0.9, 0.1
				Label:
					size_hint: 0.1, 0.1
					color: light_blue
					text: '15min'
					id: mashing_time_label
					font_size: self.parent.width * 0.15
			AnchorLayout:
				size_hint: 0.9, 0.2
				orientation: 'vertical'
				BlueButton:
					text: 'DALEJ'
					font_size: '40dp'
					font_size: self.parent.height * 0.3
					on_release: root.next_stage()
					size_hint: 0.9, 0.7
