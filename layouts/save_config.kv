<SaveConfig>
	name: "SaveConfig"
	canvas.before:
        Color:
            rgba: 0.21, 0.23, 0.35, 1
        Rectangle:
            pos: self.pos
            size: self.size
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		padding: 0, self.height*0.2, 0, 0
		BoxLayout:
			size_hint: 0.9, 0.15
			spacing: 20
			TextInput:
				id: name
				multiline: False
				size_hint: 0.8, 1
				font_size: self.height * 0.8
			OrangeButton:
				font_size: self.height * 0.5
				text: "ZAPISZ"
				size_hint: 0.2, 1
				on_release: root.save()
