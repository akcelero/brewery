<SaveConfig>
	name: "SaveConfig"
	canvas.before:
        Color:
            rgba: 0.21, 0.23, 0.35, 1
        Rectangle:
            pos: self.pos
            size: self.size
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		size_hint: 1, 1
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'center'
			size_hint: 1, .5
			BoxLayout:
				size_hint: 0.9, 0.25
				spacing: 20
				TextInput:
					id: name
					multiline: False
					size_hint: 0.7, 1
					font_size: self.height * 0.8
					focus: True
				OrangeButton:
					font_size: self.height * 0.4
					text: "ZAPISZ"
					size_hint: 0.2, 1
					on_release: root.save()
				OrangeButton:
					font_size: self.height * 0.4
					text: "WRÓĆ"
					size_hint: 0.2, 1
					on_release: root.leave()
